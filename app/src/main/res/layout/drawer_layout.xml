<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:id="@+id/to_main_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/ItemTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/to_notifies_button"
            android:elevation="0dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surface">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_message_black_36dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:scaleX="0.667"
                    android:scaleY="0.667"
            android:layout_gravity="start|center_vertical"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/messages"
                    android:textSize="@dimen/main_text_size"
                    android:textColor="@color/onSurface"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="start|center_vertical"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:id="@+id/to_notifies_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/ItemTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/to_main_button"
            app:layout_constraintBottom_toTopOf="@id/to_bookmarks_button"
            android:layout_margin="0dp"
            android:padding="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surface">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_event_note_black_36dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:scaleX="0.667"
                    android:scaleY="0.667"
                    android:layout_gravity="start|center_vertical"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notifies"
                    android:textSize="@dimen/main_text_size"
                    android:textColor="@color/onSurface"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="start|center_vertical"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:id="@+id/to_bookmarks_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/ItemTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/to_notifies_button"
            app:layout_constraintBottom_toTopOf="@id/tv"
            android:layout_margin="0dp"
            android:padding="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surface">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bookmark_border_black_36dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:scaleX="0.667"
                    android:scaleY="0.667"
                    android:layout_gravity="start|center_vertical"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bookmarks"
                    android:textSize="@dimen/main_text_size"
                    android:textColor="@color/onSurface"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="start|center_vertical"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/best_tags"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/to_bookmarks_button"
            app:layout_constraintBottom_toTopOf="@id/best_tags_recycler"
            android:textSize="@dimen/main_text_size"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/best_tags_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>