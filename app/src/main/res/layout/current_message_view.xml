<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:elevation="16dp" android:background="@color/surface">
    <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.05"/>
    <TextView
            android:id="@+id/message_short"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/current_message_time"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/onSurface"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            tools:text="Message to watchhhhhhhhhhhhhhhhh"
            android:ellipsize="end"
            android:lines="1"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/current_message_time"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/space"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/onSurface"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            tools:text="19:84"
            android:lines="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>